{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "plugins": ["vue"],
  "extends": [
    "eslint:recommended",
    "plugin:vue/vue3-recommended",
    "@vue/eslint-config-typescript"
  ],
  "rules": {
    "indent": ["warn", 2],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    // we need to turn this off, because material-design components are using slots
    "vue/no-deprecated-slot-attribute": ["off"]
  }
}
